pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
		git branch: 'main', 
                git url: 'https://github.com/samarchieb/devops.git'
            }
        }
        stage('Build Angular') {
            steps {
                sh 'npm install'
                sh 'ng build'
            }
        }
        stage('Build Spring Boot') {
            steps {
                sh './mvnw clean package'
            }
        }
        stage('Docker Build and Push') {
            steps {
                withDockerRegistry([credentialsId: 'SAMAR', url: 'https://hub.docker.com/u/samarchieb']) {
                    sh 'docker build -t my_image_name .'
                    sh 'docker push my_image_name'
                }
            }
        }
        stage('Deploy') {
            steps {
                sh 'kubectl apply -f k8s/deployment.yaml'
            }
        }
    }
}