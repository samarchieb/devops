pipeline {
    agent any
      environment {
        DOCKERHUB_CREDENTIALS = credentials('SAMAR')
    }

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/samarchieb/devops.git', branch: 'main'
            }
        }
        stage('Init'){
            steps{
                sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
            }
        }

        
      
        stage('Build') {
            steps {
                sh 'cd Front end (Angular) && docker build -t samarchieb/frontend:latest .'
                sh 'cd Back end (SpringBoot) && docker build -t samarchieb/backend:latest .'
            }
        }
        stage('Deliver') {
            steps {
                sh 'docker push samarchieb/frontend:latest'
                sh 'docker push samarchieb/backend:latest'
            }
        }
          stage('Cleanup') {
            steps {
                sh 'docker system prune -f'
               // sh 'docker rmi samarchieb/frontend:latest'
               // sh 'docker rmi samarchieb/backend:latest'
                sh 'docker logout'
            }
        }
         
    }

}